!! Style
!urxvt*borderLess: true
urxvt*borderColor: [95]#000000
urxvt*internalBorder: 2px
urxvt*externalBorder: 0

!! Font
urxvt*font: xft:Inconsolata Nerd Font Mono:pixelsize=16
! reduce distance between characters
urxvt*letterSpace: -1

!! Scrollbar
! do not show scrollbar
urxvt*scrollBar: false
! do not scroll with output
urxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
urxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
urxvt*scrollTtyKeypress: true

!! Settings
! disables Ctrl+Shift shortcut that enters ISO14755 mode
urxvt*iso14755: False
! number of lines to save in history
urxvt*saveLines: 10000

!! Extensions
urxvt*perl-ext-common: default,matcher
! use default browser to open urls
urxvt*url-launcher: xdg-open
! use mouse left-click to open urls
urxvt.matcher.button: 1
! enable copy/paste with Ctrl+Shift+C/V
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
